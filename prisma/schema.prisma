generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TwitterCheck {
  id       Int      @id @default(autoincrement())
  username String
  url      String
  result   String   // 'AVAILABLE' | 'FORBIDDEN' | 'NOT_FOUND' | 'UNKNOWN'
  ip       String
  date     DateTime @default(now())

  @@index([username])
  @@index([date])
}